<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_input_error">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="style_input_hint">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="style_login_input">
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">40dp</item>
    </style>

    <style name="style_login_input_edit">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="bg1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/bg</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="empty_img">
        <item name="android:layout_width">@dimen/def_height</item>
        <item name="android:layout_height">@dimen/def_height</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="recycler_scrollbar">
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarSize">3dp</item>
        <item name="android:scrollbarThumbVertical">@color/tool_bar_blue</item>
    </style>

    <!--<item name="app:cardBackgroundColor">@android:color/white</item>-->
    <style name="card_view_with_fab_in_webview">
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_margin">@dimen/spacing_middle</item>
        <item name="cardCornerRadius">3dp</item>
        <item name="cardElevation">2dp</item>
    </style>
    <!--<item name="android:tint">@color/colorPrimaryDark</item>-->
    <style name="sub_fab_in_webview">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginLeft">@dimen/spacing_smlarge</item>
        <item name="android:layout_marginTop">@dimen/spacing_middle</item>
        <item name="android:layout_marginRight">@dimen/spacing_smlarge</item>
        <item name="android:layout_marginBottom">@dimen/spacing_middle</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="fabSize">mini</item>
        <item name="rippleColor">@color/colorPrimaryDark</item>
    </style>

    <!--MaterialDrawerTheme.Light.DarkToolbar.TranslucentStatus-->
    <style name="AboutLibrariesSampleTheme">
        <!-- AboutLibraries specific values -->
        <item name="about_libraries_window_background">@color/about_libraries_window_background</item>
        <item name="about_libraries_card">@color/about_libraries_card</item>
        <item name="about_libraries_title_openSource">@color/about_libraries_title_openSource</item>
        <item name="about_libraries_text_openSource">@color/about_libraries_text_openSource</item>
        <item name="about_libraries_special_button_openSource">@color/about_libraries_special_button_openSource</item>
        <item name="about_libraries_dividerDark_openSource">@color/about_libraries_dividerDark_openSource</item>
        <item name="about_libraries_dividerLight_openSource">@color/about_libraries_dividerLight_openSource</item>
    </style>
    <style name="aaa">
        <item name="about_libraries_window_background">@color/about_libraries_window_background</item>
        <item name="about_libraries_card">@color/about_libraries_card</item>
        <item name="about_libraries_title_openSource">@color/about_libraries_title_openSource</item>
        <item name="about_libraries_text_openSource">@color/about_libraries_text_openSource</item>
        <item name="about_libraries_special_button_openSource">@color/about_libraries_special_button_openSource</item>
        <item name="about_libraries_dividerDark_openSource">@color/about_libraries_dividerDark_openSource</item>
        <item name="about_libraries_dividerLight_openSource">@color/about_libraries_dividerLight_openSource</item>
    </style>

    <style name="Matisse.Zhihu" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="toolbar">@style/Toolbar.Zhihu</item>
        <item name="album.dropdown.title.color">@color/zhihu_album_dropdown_title_text</item>
        <item name="album.dropdown.count.color">@color/zhihu_album_dropdown_count_text</item>
        <item name="album.element.color">@android:color/white</item>
        <item name="album.thumbnail.placeholder">@color/zhihu_album_dropdown_thumbnail_placeholder</item>
        <item name="album.emptyView">@drawable/ic_empty_zhihu</item>
        <item name="album.emptyView.textColor">@color/zhihu_album_empty_view</item>
        <item name="item.placeholder">@color/zhihu_item_placeholder</item>
        <item name="item.checkCircle.backgroundColor">@color/zhihu_item_checkCircle_backgroundColor</item>
        <item name="item.checkCircle.borderColor">@color/zhihu_item_checkCircle_borderColor</item>
        <item name="page.bg">@color/zhihu_page_bg</item>
        <item name="bottomToolbar.bg">@color/zhihu_bottom_toolbar_bg</item>
        <item name="bottomToolbar.preview.textColor">@color/zhihu_bottom_toolbar_preview</item>
        <item name="bottomToolbar.apply.textColor">@color/zhihu_bottom_toolbar_apply</item>
        <item name="preview.bottomToolbar.back.textColor">@color/zhihu_preview_bottom_toolbar_back_text</item>
        <item name="preview.bottomToolbar.apply.textColor">@color/zhihu_preview_bottom_toolbar_apply</item>
        <item name="listPopupWindowStyle">@style/Popup.Zhihu</item>
        <item name="capture.textColor">@color/zhihu_capture</item>
    </style>
</resources>
